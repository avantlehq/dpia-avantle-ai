{
  "templateId": "dpia-basic-eu-v1",
  "title": "DPIA Basic EU Template v1",
  "version": "1.0.0",
  "jurisdiction": "EU",
  "standard": "GDPR Article 35",
  "sections": {
    "context_scope": {
      "sectionId": "context_scope",
      "title": "Context & Scope",
      "description": "Describe the processing activity, involved data, subjects, and operational boundaries.",
      "fields": [
        {
          "id": "processing_name",
          "type": "text",
          "label": "Processing Activity Name",
          "placeholder": "Example: Employee Attendance System",
          "required": true
        },
        {
          "id": "processing_description",
          "type": "textarea",
          "label": "Description of Processing",
          "placeholder": "Explain what personal data is processed and why...",
          "required": true
        },
        {
          "id": "data_subjects",
          "type": "multiselect",
          "label": "Categories of Data Subjects",
          "options": [
            "Employees",
            "Customers",
            "Children",
            "Suppliers",
            "Website Visitors",
            "App Users",
            "Patients",
            "Job Applicants",
            "Other"
          ],
          "required": true
        },
        {
          "id": "personal_data_categories",
          "type": "multiselect",
          "label": "Categories of Personal Data",
          "options": [
            "Identification Data",
            "Contact Data",
            "Financial Data",
            "Location Data",
            "Online Identifiers",
            "HR Data",
            "Health Data",
            "Biometric Data",
            "Criminal Offence Data",
            "Other"
          ],
          "required": true
        },
        {
          "id": "special_categories_processed",
          "type": "radio",
          "label": "Does processing involve special categories of data (Article 9)?",
          "options": ["Yes", "No"],
          "required": true
        },
        {
          "id": "processing_purposes",
          "type": "textarea",
          "label": "Purpose(s) of Processing",
          "placeholder": "Describe why the data is being processed...",
          "required": true
        },
        {
          "id": "legal_basis",
          "type": "select",
          "label": "Primary Legal Basis (Article 6)",
          "options": [
            "Consent (Art. 6(1)(a))",
            "Contract (Art. 6(1)(b))",
            "Legal Obligation (Art. 6(1)(c))",
            "Vital Interests (Art. 6(1)(d))",
            "Public Task (Art. 6(1)(e))",
            "Legitimate Interests (Art. 6(1)(f))"
          ],
          "required": true
        },
        {
          "id": "data_sources",
          "type": "textarea",
          "label": "Data Sources",
          "placeholder": "Internal systems, users, devices, third parties, etc.",
          "required": false
        },
        {
          "id": "retention_period",
          "type": "text",
          "label": "Data Retention Period",
          "placeholder": "Example: 2 years after contract termination",
          "required": true
        },
        {
          "id": "processing_frequency",
          "type": "select",
          "label": "Frequency of Processing",
          "options": ["Continuous", "Daily", "Weekly", "Monthly", "Occasional"],
          "required": true
        },
        {
          "id": "volume_scale",
          "type": "select",
          "label": "Estimated Volume of Data",
          "options": [
            "Small (1–100 subjects)",
            "Medium (100–10,000 subjects)",
            "Large (10,000–1,000,000 subjects)",
            "Very Large (>1,000,000 subjects)"
          ],
          "required": true
        },
        {
          "id": "data_processing_location",
          "type": "multiselect",
          "label": "Data Processing Location",
          "options": ["EU/EEA", "United Kingdom", "United States", "Other Third Countries"],
          "required": true
        },
        {
          "id": "comments",
          "type": "textarea",
          "label": "Additional Notes",
          "placeholder": "Optional context or comments",
          "required": false
        }
      ]
    },
    "data_flow_processing": {
      "sectionId": "data_flow_processing",
      "title": "Data Flow & Processing",
      "description": "Describe how personal data moves through systems, where it is stored, who processes it, and how it is protected.",
      "fields": [
        {
          "id": "processing_activities_summary",
          "type": "textarea",
          "label": "High-Level Data Flow Description",
          "placeholder": "Describe how personal data is collected, processed, stored, and deleted across systems...",
          "required": true
        },
        {
          "id": "data_collection_methods",
          "type": "multiselect",
          "label": "Data Collection Methods",
          "options": [
            "Online forms / web portals",
            "Mobile applications",
            "In-person / paper forms",
            "Email communication",
            "Sensors / IoT devices",
            "System logs / telemetry",
            "Third-party data imports",
            "Other"
          ],
          "required": true
        },
        {
          "id": "automated_decision_making",
          "type": "radio",
          "label": "Does the processing include automated decision-making (incl. profiling)?",
          "options": [
            "No automated decision-making",
            "Yes, with human review",
            "Yes, fully automated"
          ],
          "required": true
        },
        {
          "id": "automated_decision_details",
          "type": "textarea",
          "label": "If automated decision-making is used, describe the logic and impact on data subjects",
          "placeholder": "Explain the logic, significance, and potential consequences of automated decisions...",
          "required": false
        },
        {
          "id": "storage_locations",
          "type": "multiselect",
          "label": "Primary Storage Locations",
          "options": [
            "On-premise servers (EU/EEA)",
            "On-premise servers (outside EU/EEA)",
            "Cloud infrastructure (EU/EEA)",
            "Cloud infrastructure (outside EU/EEA)",
            "End-user devices (laptops, mobiles)",
            "Backup systems",
            "Removable media",
            "Other"
          ],
          "required": true
        },
        {
          "id": "storage_security_level",
          "type": "multiselect",
          "label": "Storage Protection Measures",
          "options": [
            "Encryption at rest",
            "Encryption in transit",
            "Pseudonymisation",
            "Anonymisation",
            "Access control and role-based permissions",
            "Network segmentation",
            "Regular backups",
            "No specific protection measures",
            "Other"
          ],
          "required": true
        },
        {
          "id": "data_transfers_outside_eu",
          "type": "radio",
          "label": "Are personal data transferred outside the EU/EEA?",
          "options": [
            "No, data remain within the EU/EEA",
            "Yes, to countries with adequacy decisions",
            "Yes, to other third countries"
          ],
          "required": true
        },
        {
          "id": "data_transfer_countries",
          "type": "textarea",
          "label": "If applicable, list destination countries and recipients",
          "placeholder": "List the countries (e.g. US, UK, etc.) and the categories of recipients...",
          "required": false
        },
        {
          "id": "data_transfer_safeguards",
          "type": "multiselect",
          "label": "Safeguards for International Transfers",
          "options": [
            "Adequacy decision",
            "Standard Contractual Clauses (SCCs)",
            "Binding Corporate Rules (BCRs)",
            "Derogations under Article 49",
            "Technical measures (encryption, pseudonymisation)",
            "Organisational measures (policies, access control)",
            "No specific safeguards",
            "Other"
          ],
          "required": false
        },
        {
          "id": "processors_involved",
          "type": "radio",
          "label": "Are external processors involved in the processing?",
          "options": [
            "No external processors",
            "Yes, one or more processors"
          ],
          "required": true
        },
        {
          "id": "processors_description",
          "type": "textarea",
          "label": "If processors are involved, describe their roles and services",
          "placeholder": "List main processors, their services, and categories of data they handle...",
          "required": false
        },
        {
          "id": "joint_controllers",
          "type": "radio",
          "label": "Is there joint controllership (Article 26)?",
          "options": [
            "No joint controllers",
            "Yes, joint controllership arrangement exists"
          ],
          "required": true
        },
        {
          "id": "joint_controllers_details",
          "type": "textarea",
          "label": "If joint controllers exist, describe the allocation of responsibilities",
          "placeholder": "Describe how responsibilities and obligations are allocated between joint controllers...",
          "required": false
        },
        {
          "id": "internal_data_recipients",
          "type": "textarea",
          "label": "Internal Data Recipients",
          "placeholder": "List internal departments or roles that have access to the personal data (e.g. HR, Finance, IT Support)...",
          "required": true
        },
        {
          "id": "external_data_recipients",
          "type": "textarea",
          "label": "External Data Recipients",
          "placeholder": "List external entities that receive personal data (e.g. payroll provider, insurance companies, authorities)...",
          "required": false
        },
        {
          "id": "logging_and_monitoring",
          "type": "multiselect",
          "label": "Logging and Monitoring",
          "options": [
            "Access logs for sensitive systems",
            "Security event monitoring (SIEM)",
            "Regular log review",
            "No systematic logging",
            "Other"
          ],
          "required": false
        },
        {
          "id": "data_flow_diagram_reference",
          "type": "text",
          "label": "Reference to Data Flow Diagram or Documentation",
          "placeholder": "Link, filename, or internal reference ID...",
          "required": false
        }
      ]
    },
    "risk_assessment": {
      "sectionId": "risk_assessment",
      "title": "Risk Assessment",
      "description": "Assess risks to the rights and freedoms of data subjects based on likelihood and impact, and document key risk scenarios.",
      "fields": [
        {
          "id": "risk_scenarios",
          "type": "multiselect",
          "label": "Risk Scenarios",
          "options": [
            "Unauthorized access (internal)",
            "Unauthorized access (external)",
            "Data breach / leak",
            "Accidental disclosure",
            "Loss of device / media",
            "Excessive data collection",
            "Function creep / secondary use",
            "Incorrect data leading to harm",
            "Discrimination / unfair treatment",
            "Identity theft / fraud",
            "Loss of confidentiality (special categories)",
            "Unlawful international transfer",
            "Other"
          ],
          "required": true
        },
        {
          "id": "vulnerable_data_subjects",
          "type": "radio",
          "label": "Are vulnerable data subjects involved?",
          "options": [
            "No",
            "Yes - children",
            "Yes - employees/dependents",
            "Yes - patients / health-related context",
            "Yes - other vulnerable groups"
          ],
          "required": true
        },
        {
          "id": "rights_impacted",
          "type": "multiselect",
          "label": "Potentially Impacted Rights and Freedoms",
          "options": [
            "Privacy / confidentiality",
            "Freedom of movement",
            "Freedom of expression",
            "Non-discrimination",
            "Protection from identity theft or fraud",
            "Economic interests",
            "Reputation damage",
            "Loss of control over personal data",
            "Physical harm",
            "Other"
          ],
          "required": true
        },
        {
          "id": "risk_likelihood",
          "type": "select",
          "label": "Likelihood (1–5)",
          "options": [
            "1 - Very Low",
            "2 - Low",
            "3 - Medium",
            "4 - High",
            "5 - Very High"
          ],
          "required": true
        },
        {
          "id": "risk_impact",
          "type": "select",
          "label": "Impact / Severity (1–5)",
          "options": [
            "1 - Minimal",
            "2 - Minor",
            "3 - Moderate",
            "4 - Major",
            "5 - Severe"
          ],
          "required": true
        },
        {
          "id": "risk_rationale",
          "type": "textarea",
          "label": "Risk Rationale",
          "placeholder": "Explain why the selected likelihood and impact levels apply in this processing context...",
          "required": true
        },
        {
          "id": "existing_controls_summary",
          "type": "textarea",
          "label": "Existing Controls (Before Mitigation)",
          "placeholder": "Summarize current technical and organizational measures already in place...",
          "required": true
        },
        {
          "id": "residual_risk_expectation",
          "type": "radio",
          "label": "Expected residual risk after mitigation",
          "options": [
            "Low",
            "Medium",
            "High",
            "Unknown (to be evaluated)"
          ],
          "required": false
        },
        {
          "id": "high_risk_remains",
          "type": "radio",
          "label": "Do you expect that high risk will remain after mitigation?",
          "options": [
            "No",
            "Yes",
            "Unsure"
          ],
          "required": true
        },
        {
          "id": "consultation_needed",
          "type": "radio",
          "label": "Is prior consultation with the supervisory authority likely needed (Article 36)?",
          "options": [
            "No",
            "Yes",
            "Unsure"
          ],
          "required": false
        },
        {
          "id": "risk_summary",
          "type": "textarea",
          "label": "Risk Summary",
          "placeholder": "Write a short risk summary suitable for the DPIA report...",
          "required": true
        }
      ]
    },
    "mitigation_measures": {
      "sectionId": "mitigation_measures",
      "title": "Mitigation Measures",
      "description": "Document technical and organisational safeguards, privacy by design measures, and the expected residual risk after mitigation.",
      "fields": [
        {
          "id": "mitigation_overview",
          "type": "textarea",
          "label": "Mitigation Overview",
          "placeholder": "Summarize the mitigation strategy and key safeguards...",
          "required": true
        },
        {
          "id": "technical_measures",
          "type": "multiselect",
          "label": "Technical Measures",
          "options": [
            "Encryption at rest",
            "Encryption in transit",
            "Pseudonymisation",
            "Anonymisation",
            "Role-based access control (RBAC)",
            "Multi-factor authentication (MFA)",
            "Network segmentation",
            "Secure backups and restore testing",
            "Endpoint protection / EDR",
            "Vulnerability scanning and patch management",
            "Audit logging and monitoring",
            "Data loss prevention (DLP)",
            "Secure key management (KMS/HSM)",
            "Other"
          ],
          "required": true
        },
        {
          "id": "technical_measures_details",
          "type": "textarea",
          "label": "Technical Measures – Details",
          "placeholder": "Provide implementation details for selected technical measures (scope, systems, frequency, owners)...",
          "required": false
        },
        {
          "id": "organisational_measures",
          "type": "multiselect",
          "label": "Organisational Measures",
          "options": [
            "Policies and procedures (security, privacy)",
            "Access provisioning and periodic reviews",
            "Staff training and awareness",
            "Incident response plan",
            "Vendor due diligence and DPAs",
            "Change management",
            "Segregation of duties",
            "Regular audits and assessments",
            "Data minimisation governance",
            "Retention and deletion procedures",
            "Other"
          ],
          "required": true
        },
        {
          "id": "organisational_measures_details",
          "type": "textarea",
          "label": "Organisational Measures – Details",
          "placeholder": "Describe how organisational measures are enforced (owners, cadence, evidence)...",
          "required": false
        },
        {
          "id": "privacy_by_design_measures",
          "type": "multiselect",
          "label": "Privacy by Design / Default Measures",
          "options": [
            "Data minimisation",
            "Purpose limitation controls",
            "Default privacy-friendly settings",
            "User access controls by default",
            "Separation of environments (dev/test/prod)",
            "Data masking in non-production",
            "Secure development lifecycle (SDLC)",
            "Regular DPIA review triggers",
            "Other"
          ],
          "required": true
        },
        {
          "id": "privacy_by_design_details",
          "type": "textarea",
          "label": "Privacy by Design – Details",
          "placeholder": "Describe how PbD/PbDefault is implemented and verified...",
          "required": false
        },
        {
          "id": "data_subject_rights_support",
          "type": "multiselect",
          "label": "Support for Data Subject Rights",
          "options": [
            "DSAR process defined",
            "Identity verification process",
            "Response SLA tracking",
            "Data portability export available",
            "Rectification workflow",
            "Erasure workflow",
            "Restriction/objection handling",
            "Other"
          ],
          "required": true
        },
        {
          "id": "incident_response_measures",
          "type": "multiselect",
          "label": "Incident Response & Monitoring",
          "options": [
            "Incident response plan documented",
            "Breach detection and alerting",
            "Breach notification procedures",
            "Tabletop exercises",
            "24/7 monitoring / on-call",
            "Forensic logging enabled",
            "Other"
          ],
          "required": false
        },
        {
          "id": "review_frequency",
          "type": "select",
          "label": "Review / Reassessment Frequency",
          "options": [
            "Quarterly",
            "Every 6 months",
            "Annually",
            "After major changes",
            "Other"
          ],
          "required": true
        },
        {
          "id": "review_triggers",
          "type": "multiselect",
          "label": "Review Triggers",
          "options": [
            "Change of processing purpose",
            "Change of data categories",
            "New technology introduced",
            "New processor/vendor",
            "High-risk incident or near-miss",
            "Regulatory guidance change",
            "Other"
          ],
          "required": false
        },
        {
          "id": "residual_likelihood",
          "type": "select",
          "label": "Residual Likelihood (1–5)",
          "options": [
            "1 - Very Low",
            "2 - Low",
            "3 - Medium",
            "4 - High",
            "5 - Very High"
          ],
          "required": true
        },
        {
          "id": "residual_impact",
          "type": "select",
          "label": "Residual Impact / Severity (1–5)",
          "options": [
            "1 - Minimal",
            "2 - Minor",
            "3 - Moderate",
            "4 - Major",
            "5 - Severe"
          ],
          "required": true
        },
        {
          "id": "residual_risk_statement",
          "type": "textarea",
          "label": "Residual Risk Statement",
          "placeholder": "Summarize the expected residual risk after mitigation and whether it is acceptable...",
          "required": true
        },
        {
          "id": "high_residual_risk_remains",
          "type": "radio",
          "label": "Does high residual risk remain after mitigation?",
          "options": [
            "No",
            "Yes",
            "Unsure"
          ],
          "required": true
        },
        {
          "id": "consultation_decision",
          "type": "radio",
          "label": "Decision on prior consultation (Article 36)",
          "options": [
            "Not needed",
            "Needed",
            "To be determined"
          ],
          "required": false
        },
        {
          "id": "mitigation_notes",
          "type": "textarea",
          "label": "Additional Notes / Evidence References",
          "placeholder": "Links to policies, screenshots, audit reports, DPIA evidence, internal tickets...",
          "required": false
        }
      ]
    }
  }
}